<?xml version="1.0" encoding="utf-8" ?>
<nlog throwExceptions="false" internalLogFile="${basedir}/nlog.txt"
         internalLogLevel="Error" autoReload="true"

      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <extensions>
  </extensions>

  <targets>
    
    <target name="SyslogAsyncTarget" xsi:type="AsyncWrapper">
      <target name="PaperTrailTarget" type="Network" address="udp://nsmon01-sco.bianyc.net:514" layout="${event-context:item=SYSLOG}"  maxMessageSize="1024" />
      <target name="LocalSyslogTarget" type="Network" address="udp://nsmon01-sco.bianyc.net:514" layout="${event-context:item=SYSLOG}"  maxMessageSize="1024" />
    </target>
    
  </targets>

  <rules>
    <logger name="*" minlevel="Trace" writeTo="LocalSyslogTarget"  />
    <logger name="*" minlevel="Trace" writeTo="PaperTrailTarget"  />
  </rules>
</nlog>
